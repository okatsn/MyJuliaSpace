// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/docker-existing-dockerfile
{
    "name": "my-julia-space",
    // ===== Use Docker Compose =====
    "dockerComposeFile": "docker-compose.yml",
    "service": "devj",
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/home/jovyan/my-julia-space",
    "customizations": {
        "vscode": {
            "extensions": [
                // KEYNOTE: Common Extensions
                // "gruntfuggly.todo-tree",
                "streetsidesoftware.code-spell-checker",
                "mhutchie.git-graph", // GIT and GITHUB
                "donjayamanne.githistory",
                "github.vscode-pull-request-github",
                "felipecaputo.git-project-manager",
                "eamodio.gitlens",
                "mathieu.vscode-github-actions",
                "shardulm94.trailing-spaces", // format and highlight
                "christian-kohler.path-intellisense",
                "naumovs.color-highlight", // html colors
                "royaction.color-manager",
                "shd101wyy.markdown-preview-enhanced", // markdown
                "yzhang.markdown-all-in-one",
                "tomashubelbauer.vscode-markdown-table-format",
                "joffreykern.markdown-toc",
                "bierner.emojisense", // emoji
                "wdawson.better-kill-ring", // other
                "ms-vscode.live-server",
                "mutantdino.resourcemonitor",
                "mkvoya.eps-preview",
                "ms-azuretools.vscode-docker", // Docker
                "editorconfig.editorconfig", // vscode: use .editorconfig at WORKSPACE_DIR
                "redhat.vscode-yaml",
                // SECTION: MyJuliaSpace Exclusive
                "julialang.language-julia", // julia
                "colinfang.markdown-julia",
                "ms-python.python", // python
                "ms-python.vscode-pylance",
                "quarto.quarto",
                "bungcip.better-toml"
            ],
            "settings": {
                "gitProjectManager.baseProjectsFolders": [
                    "~/my-julia-space",
                    "~/.julia/dev"
                ], // this allows GPM (felipecaputo.git-project-manager) to open repo in the "projects" in a new window  
                // "~/" is equivalent to "/home/jovyan/"
                //
                "python.defaultInterpreterPath": "/opt/conda/bin/python", // this is for quarto to correctly work with VSCode. 
                // See: 
                // https://code.visualstudio.com/docs/python/environments  
                // https://discourse.julialang.org/t/jupyter-kernel-not-found-when-rendering-with-quarto/86205
                "julia.environmentPath": "/home/jovyan/my-julia-space",
                "python.terminal.activateEnvironment": false
                // KEYNOTE: For general settings, please Other settings please refer https://github.com/okatsn/MyVSCodeSettings
            }
        }
    }
}